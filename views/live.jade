extends layout

block content
  h1 Mario Kart scoreboard
    div.scoreboard
      table.table__scoreboard
        tr
          th Character
          th Score
        tr
          td(class="mario") Mario 👲
          td.m 0
        tr
          td(class="luigi") Luigi 👨‍🔧
          td.l 0
        tr
          td(class="peach") Princess Peach 💃
          td.pp 0
        tr
          td(class="yoshi") Yoshi 🦖
          td.y 0
        tr
          td(class="donkey") Donkey Kong Jr. 🦍
          td.dk 0
        tr
          td(class="koopa") Koopa Troopa 🐢
          td.kt 0
        tr
          td(class="toad") Toad 🍄
          td.t 0
  script(src='/javascripts/live.js')