extends layout

block content
  h1 Update scoreboard
    div.update__scoreboard
      form.update__form
        select(name="character") Mario Kart character
          option(value="Mario") Mario
          option(value="Luigi") Luigi
          option(value="Princess Peach") Princess Peach
          option(value="Yoshi") Yoshi
          option(value="Donkey Kong Jr.") Donkey Kong Jr.
          option(value="Koopa Troopa") Koopa Troopa
          option(value="Toad") Toad
        label(for="score" class="score") Score
        input(type="text" name="score" class="score__input")
        input(type="submit" value="Update scoreboard")
  script(src='/javascripts/app.js')